{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno: Launch Program",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}/main.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk",
                "--allow-all"
            ],
            "attachSimplePort": 9229,
            "outputCapture": "std"
        }
    ]
}